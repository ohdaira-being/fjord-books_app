<p id="notice"><%= notice %></p>

<h1><%= t('translate.Books') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('translate.title') %></th>
      <th><%= t('translate.Memo') %></th>
      <th><%= t('translate.Author') %></th>
      <th><%= t('translate.Picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('translate.Show'), book %></td>
        <td><%= link_to t('translate.Edit'), edit_book_path(book) %></td>
        <td><%= link_to t('translate.Destory'), book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

